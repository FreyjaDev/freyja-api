{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["bun-types"],

    /* Emit */
    "outDir": "./build",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
